{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "extensionsToTreatAsEsm": [".ts"],
  "transform": {
    "^.+\\.ts$": ["ts-jest", { "useESM": true }]
  },
  "moduleNameMapper": {
    "^@shared/(.*)\\.js$": "<rootDir>/../../shared/$1",
    "^@shared/(.*)$": "<rootDir>/../../shared/$1",
    "^(\\.{1,2}/.*)\\.js$": "$1"
  }
}
